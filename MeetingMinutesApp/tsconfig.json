{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "paths": {
      "@meeting-minutes/shared": ["../shared/src"],
      "@meeting-minutes/shared/*": ["../shared/src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}
